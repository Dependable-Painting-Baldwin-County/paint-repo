{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "lib": ["ES2024", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}